@model IEnumerable<ProyectoViewModel>

@if (Model != null)
{
    <div class="container mb-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenUrl" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noreferrer">Visitar</a>
                    </div>
                </div>
            }

        </div>
    </div>
}

